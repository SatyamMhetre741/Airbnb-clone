<!DOCTYPE html>
<html>
<head>
    <title>Registered Homes</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('../partials/nav') %>

    <ul class="list-disc pl-8">
        <% if (homes.length === 0) { %>
            <li class="text-gray-500">No homes added yet.</li>
        <% } else { %>
            <% homes.forEach(function(home) { %>
                <div class="flex flex-col md:flex-row bg-grey rounded-xl shadow-lg overflow-hidden mb-6 hover:shadow-xl transition-shadow duration-300">
                    <!-- Image -->
                    <div class="md:w-1/3">
                        <img class="object-cover h-48 w-full md:h-full" src="<%= home.photoUrl %>" alt="House Image">
                    </div>

                    <!-- Content -->
                    <div class="p-6 md:w-2/3">
                        <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h2>
                        <p class="text-gray-600 mb-1"><span class="font-medium">Location:</span> <%= home.location %></p>
                        <p class="text-gray-600"><span class="font-medium">Price per Night:</span> â‚¹<%= home.ppn %></p>
                    </div>
                    <button class="bg-green-300 p-2 rounded-md">Book Now</button>
                </div>
            <% }) %>
        <% } %>
    </ul>
</body>
</html>