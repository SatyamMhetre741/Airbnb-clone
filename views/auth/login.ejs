<%- include('../partials/head') %>
<body class="bg-gray-50 min-h-screen">
    <%- include('../partials/header') %>
    <%- include('../partials/nav') %>

    <main class="max-w-md mx-auto mt-16 px-4 mb-16">
        <div class="text-center mb-8">
            <img src="/images/airbnb-logo.svg" alt="Airbnb Logo" class="h-12 w-12 mx-auto mb-4">
            <h1 class="text-3xl font-bold text-gray-800">Welcome Back</h1>
            <p class="text-gray-600 mt-2">Sign in to your Airbnb account</p>
        </div>
        
        <% if (errorMessage) { %>
            <div class="bg-rose-100 border border-rose-200 text-rose-700 px-4 py-3 rounded-lg mb-6">
                <%= errorMessage %>
            </div>
        <% } %>
        
        <form action="/login" method="POST" class="bg-white p-8 rounded-xl shadow-lg">
            <div class="mb-6">
                <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
                <input type="email" id="email" name="email" placeholder="your@email.com" required 
                    class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500" />
            </div>
            
            <div class="mb-6">
                <label for="password" class="block text-gray-700 font-medium mb-2">Password</label>
                <input type="password" id="password" name="password" placeholder="••••••••" required 
                    class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500" />
            </div>
            
            <div class="mb-6">
                <div class="flex items-center">
                    <input type="checkbox" id="remember" name="remember" 
                        class="h-4 w-4 text-rose-500 focus:ring-rose-500 border-gray-300 rounded" />
                    <label for="remember" class="ml-2 block text-gray-700">Remember me</label>
                </div>
            </div>
            
            <div class="flex justify-between items-center">
                <button type="submit" class="bg-gradient-to-r from-rose-500 to-pink-600 hover:from-rose-600 hover:to-pink-700 text-white py-3 px-8 rounded-full transition duration-300 font-medium shadow-md">
                    Login
                </button>
                <a href="#" class="text-rose-500 hover:text-rose-600 text-sm font-medium">Forgot Password?</a>
            </div>
        </form>
        
        <div class="text-center mt-8">
            <p class="text-gray-600">Don't have an account? <a href="/signup" class="text-rose-500 hover:text-rose-600 font-medium">Sign up</a></p>
        </div>
    </main>
    
    <%- include('../partials/footer') %>
    <script src="/js/nav.js"></script>
</body>
</html>
