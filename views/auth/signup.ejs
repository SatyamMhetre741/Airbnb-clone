<%- include('../partials/head') %>
<body class="bg-gray-50 min-h-screen">
    <%- include('../partials/header') %>
    <%- include('../partials/nav') %>

    <main class="max-w-md mx-auto mt-16 px-4 mb-16">
        <div class="text-center mb-8">
            <img src="/images/airbnb-logo.svg" alt="Airbnb Logo" class="h-12 w-12 mx-auto mb-4">
            <h1 class="text-3xl font-bold text-gray-800">Join Airbnb</h1>
            <p class="text-gray-600 mt-2">Create your account in just a few steps</p>
        </div>
        
        <% if (errorMessage) { %>
            <div class="bg-rose-100 border border-rose-200 text-rose-700 px-4 py-3 rounded-lg mb-6">
                <%= errorMessage %>
            </div>
        <% } %>
        
        <form action="/signup" method="POST" class="bg-white p-8 rounded-xl shadow-lg">
            <div class="mb-6">
                <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
                <input type="email" id="email" name="email" value="<%= oldInput.email %>" placeholder="your@email.com" required 
                    class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500" />
            </div>
            
            <div class="mb-6">
                <label for="password" class="block text-gray-700 font-medium mb-2">Password</label>
                <input type="password" id="password" name="password" value="<%= oldInput.password %>" placeholder="••••••••" required 
                    class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500" />
                <p class="mt-1 text-sm text-gray-500">Password must be at least 5 characters</p>
            </div>
            
            <div class="mb-6">
                <label for="confirmPassword" class="block text-gray-700 font-medium mb-2">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" value="<%= oldInput.confirmPassword %>" placeholder="••••••••" required 
                    class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500" />
            </div>
            
            <div class="mb-8">
                <p class="mb-3 font-medium text-gray-700">Sign up as:</p>

                <div class="flex space-x-8">
                    <!-- Individual Option -->
                    <label class="inline-flex items-center cursor-pointer">
                        <input 
                            type="radio" 
                            id="Individual" 
                            name="userType" 
                            value="Individual" 
                            checked
                            class="form-radio h-5 w-5 text-rose-500 focus:ring-rose-500 border-gray-300 transition duration-150 ease-in-out"
                        >
                        <span class="ml-2 text-gray-700">Individual</span>
                    </label>

                    <!-- Business Option -->
                    <label class="inline-flex items-center cursor-pointer">
                        <input 
                            type="radio" 
                            id="Business" 
                            name="userType" 
                            value="Business" 
                            class="form-radio h-5 w-5 text-rose-500 focus:ring-rose-500 border-gray-300 transition duration-150 ease-in-out"
                        >
                        <span class="ml-2 text-gray-700">Business</span>
                    </label>
                </div>
            </div>
            
            <button type="submit" class="w-full bg-gradient-to-r from-rose-500 to-pink-600 hover:from-rose-600 hover:to-pink-700 text-white py-3 px-6 rounded-full transition duration-300 font-medium shadow-md">
                Create Account
            </button>
        </form>
        
        <div class="text-center mt-8">
            <p class="text-gray-600">Already have an account? <a href="/login" class="text-rose-500 hover:text-rose-600 font-medium">Login</a></p>
        </div>
    </main>
    
    <%- include('../partials/footer') %>
    <script src="/js/nav.js"></script>
</body>
